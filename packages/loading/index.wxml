<view
  class="van-loading custom-class"
  style="width: {{ normalizeSize(size) }}; height: {{ normalizeSize(size) }}"
>
  <view
    class="van-loading__spinner van-loading__spinner--{{ type }}"
    style="color: {{ color }};"
  >
    <view
      wx:if="{{ type === 'spinner' }}"
      wx:for="item in 12"
      wx:key="index"
      class="van-loading__dot"
    />
  </view>
</view>

<wxs module="normalizeSize">
function normalizeSize(size) {
  // 因为 parseInt 可以过滤干扰 string，所以相比 Number 更好
  return parseInt(size, 10) + 'px'
}
module.exports = normalizeSize;
</wxs>